<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_Famers"
        style="@style/CategoryStyle"
        android:background="@color/category_famers"
        android:text="@string/category_Famers"
        />
    <TextView
        android:background="@color/category_products"
        android:id="@+id/tv_Products"
        style="@style/CategoryStyle"
        android:text="@string/category_products"
        />
    <TextView
        android:background="@color/category_driver"
        android:id="@+id/tv_Driver"
        style="@style/CategoryStyle"
        android:text="@string/category_Driver"
        />
    <TextView
        android:background="@color/category_consumers"
        android:id="@+id/tv_Consumer"
        style="@style/CategoryStyle"
        android:text="@string/category_Consumers"
        />

</LinearLayout>